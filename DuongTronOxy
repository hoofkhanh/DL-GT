#include<stdio.h>
#include<conio.h>
#include<math.h>

struct Diem{
	float x,y;
};

typedef Diem D;
void nhapDiem(D &);

void nhapDiem(D &d){
	printf("\nnhap diem x0 : ");
	scanf("%f",&d.x);
	printf("nhap diem y0 : ");
	scanf("%f",&d.y);
}

struct DuongTron{
	D I;
	float r;
};

typedef DuongTron DT;

void nhapToaDo(DT &);
void nhapBanKinh(DT &);

float tinhChuVi(DT);
float tinhDienTich(DT);

void inKetQua(DT);

void nhapToaDo(DT &dt){
	printf("nhap toa do tam I ");
	nhapDiem(dt.I);
}

void nhapBanKinh(DT &dt){
	printf("nhap ban kinh r : ");
	scanf("%f",&dt.r);
}

float tinhDienTich(DT dt){
	return(3.14*dt.r*dt.r );
}

float tinhChuVi(DT dt){
	return (2*3.14*dt.r);
}

void inKetQua(DT dt){
	printf("\nI(%.2f,%.2f)",dt.I.x,dt.I.x);
	printf("\nban kinh r = %.2f",dt.r);
	printf("\nchu vi hinh tron = %.2f",tinhChuVi(dt));
	printf("\ndien tich hinh tron =%.2f",tinhDienTich(dt));
}

int main(){
	DT a;
	nhapToaDo(a);
	nhapBanKinh(a);
	inKetQua(a);
}
